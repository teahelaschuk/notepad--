<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Notepad--" Height="600" Width="600">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/Untitled3.png" Stretch="Fill"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="New" IsEnabled="True"/>
            <MenuItem Header="Exit" IsEnabled="True"/>
        </Menu>


        <Viewbox  Grid.Row="1" Stretch="Fill">
            <TextBox Grid.Row="1" Width="800" Background="{x:Null}" Foreground="Red" SelectionBrush="Black" FontSize="120" FontWeight="Bold" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" TextWrapping="Wrap" AcceptsReturn="True" AutomationProperties.IsColumnHeader="True" IsUndoEnabled="False" MinLines="5">
                <TextBox.Effect>
                    <BlurEffect/>
                </TextBox.Effect>
            </TextBox>
        </Viewbox>

    </Grid>
</Window>
